{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",  
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "./",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./types.d.ts"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
